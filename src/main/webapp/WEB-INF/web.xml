<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <distributable/>
    <servlet>
        <servlet-name>ValidacionSesion</servlet-name>
        <servlet-class>servlet_validacion.ValidacionSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>datosInventario</servlet-name>
        <servlet-class>controlador.servlet.procesos.datosInventario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sesion</servlet-name>
        <servlet-class>controlador.servlet.validaciones.Sesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Creacion_Inventario</servlet-name>
        <servlet-class>controlador.servlet.procesos.Creacion_Inventario</servlet-class>
        <url-pattern>/Creacion_Inventario</url-pattern>
    </servlet>
    <servlet>
        <servlet-name>BuscarInventario</servlet-name>
        <servlet-class>controlador.servlet.procesos.BuscarInventario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>datosInventario</servlet-name>
        <url-pattern>/datosInventario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Creacion_Inventario</servlet-name>
        <url-pattern>/Creacion_Inventario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sesion</servlet-name>
        <url-pattern>/Sesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarInventario</servlet-name>
        <url-pattern>/BuscarInventario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>90</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
